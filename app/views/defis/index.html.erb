<p id="notice"><%= notice %></p>

<h1>Defis</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @defis.each do |defi| %>
      <tr>
        <td><%= defi.name %></td>
        <td><%= defi.user %></td>
        <td><%= link_to 'Show', defi %></td>
        <td><%= link_to 'Edit', edit_defi_path(defi) %></td>
        <td><%= link_to 'Destroy', defi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

